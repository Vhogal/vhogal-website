<section class="relative min-h-screen flex items-center overflow-hidden">
  <!-- Base dark background -->
  <div class="absolute inset-0 bg-black"></div>

  <!-- Spline 3D Animation - Full screen immersive background -->
  <div class="absolute inset-0">
    <div id="spline-container" class="absolute inset-0 w-full h-full">
      <!-- Loading state -->
      <div id="spline-loading" class="w-full h-full flex items-center justify-center transition-opacity duration-500">
        <div class="relative">
          <div class="w-80 h-80 md:w-[600px] md:h-[600px] rounded-full bg-gradient-to-br from-gray-800/50 via-gray-700/30 to-transparent blur-3xl animate-pulse-slow"></div>
          <div class="absolute inset-0 w-80 h-80 md:w-[600px] md:h-[600px] rounded-full bg-gradient-to-tr from-gray-600/20 to-transparent blur-2xl animate-float"></div>
        </div>
      </div>
      <!-- Spline canvas - full opacity for maximum visibility -->
      <canvas id="spline-canvas" class="w-full h-full opacity-0 transition-opacity duration-1000"></canvas>
    </div>

    <!-- Subtle vignette overlay for depth -->
    <div class="absolute inset-0 bg-radial-gradient pointer-events-none" style="background: radial-gradient(ellipse at center, transparent 0%, rgba(0,0,0,0.3) 100%);"></div>

    <!-- Light gradient on left for text readability - much more transparent -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/40 to-transparent pointer-events-none"></div>
  </div>

  <!-- Content - Left aligned with text protection -->
  <div class="container relative z-10 pt-32 pb-20 pointer-events-none">
    <div class="max-w-2xl">
      <!-- Overline badge -->
      <div class="inline-flex items-center gap-3 px-4 py-2 bg-black/40 backdrop-blur-md border border-white/10 rounded-full mb-8 animate-fade-in-up opacity-0 pointer-events-auto" style="animation-delay: 0.1s;">
        <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
        <span class="font-mono text-xs uppercase tracking-[0.2em] text-gray-200">
          Software Development
        </span>
      </div>

      <!-- Main Heading - with text shadow for readability -->
      <h1 class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-mono font-bold leading-[0.95] mb-8 animate-fade-in-up opacity-0" style="animation-delay: 0.2s; text-shadow: 0 4px 30px rgba(0,0,0,0.5);">
        <span class="block text-white">O futuro da</span>
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-white via-gray-300 to-gray-500">
          gestão.
        </span>
      </h1>

      <!-- Subheading with backdrop -->
      <p class="text-lg md:text-xl text-gray-300 max-w-xl mb-10 leading-relaxed animate-fade-in-up opacity-0" style="animation-delay: 0.3s; text-shadow: 0 2px 20px rgba(0,0,0,0.5);">
        Muito além de ferramentas, construímos o ecossistema digital necessário para modernizar sua gestão e transformar desafios operacionais em resultados reais.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-start gap-4 animate-fade-in-up opacity-0 pointer-events-auto" style="animation-delay: 0.4s;">
        <a href="#produtos" class="btn-primary group">
          <span>Conheça nossos produtos</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:translate-x-1">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
        <a href="#contato" class="btn-secondary">
          Fale Conosco
        </a>
      </div>

    </div>
  </div>

  <!-- Scroll indicator -->
  <a href="#produtos" class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce-slow cursor-pointer group pointer-events-auto" aria-label="Scroll para produtos">
    <div class="flex flex-col items-center gap-2">
      <span class="text-xs font-mono uppercase tracking-widest text-gray-400 group-hover:text-white transition-colors">Scroll</span>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400 group-hover:text-white transition-colors">
        <path d="M12 5v14"></path>
        <path d="m19 12-7 7-7-7"></path>
      </svg>
    </div>
  </a>

  <!-- Corner accent lines -->
  <div class="absolute top-24 left-8 w-px h-20 bg-gradient-to-b from-white/30 to-transparent hidden lg:block"></div>
  <div class="absolute top-24 left-8 w-20 h-px bg-gradient-to-r from-white/30 to-transparent hidden lg:block"></div>
</section>

<script>
  // Load Spline 3D animation
  const loadSpline = async () => {
    const container = document.getElementById('spline-container');
    const canvas = document.getElementById('spline-canvas') as HTMLCanvasElement;
    const loading = document.getElementById('spline-loading');

    if (!container || !canvas) return;

    try {
      // Dynamically import Spline runtime
      const { Application } = await import('@splinetool/runtime');

      const spline = new Application(canvas);

      // Load the user's custom scene
      await spline.load('https://prod.spline.design/rgd2bbjhPOsXxrCw/scene.splinecode');

      // Show canvas at full opacity for maximum visibility
      canvas.classList.remove('opacity-0');
      canvas.classList.add('opacity-100');
      loading?.classList.add('opacity-0');

      // Remove loading element after fade
      setTimeout(() => {
        loading?.classList.add('hidden');
      }, 500);

    } catch (error) {
      console.warn('Spline failed to load, using fallback:', error);

      // Enhanced CSS fallback
      if (loading) {
        loading.innerHTML = `
          <div class="relative w-full h-full flex items-center justify-center">
            <div class="absolute w-96 h-96 md:w-[700px] md:h-[700px] rounded-full bg-gradient-to-br from-gray-700/40 via-gray-800/30 to-transparent blur-3xl animate-float"></div>
            <div class="absolute w-72 h-72 md:w-[500px] md:h-[500px] rounded-full bg-gradient-to-tl from-gray-600/20 via-gray-900/30 to-transparent blur-2xl animate-float-delayed"></div>
            <div class="absolute w-48 h-48 md:w-80 md:h-80 rounded-full bg-gradient-to-r from-white/10 to-gray-800/20 blur-xl animate-pulse-slow"></div>
          </div>
        `;
      }
    }
  };

  // Load Spline when page is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadSpline);
  } else {
    loadSpline();
  }
</script>
