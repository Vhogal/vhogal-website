<section id="contato" class="py-32 bg-gray-900/30 relative overflow-hidden">
  <!-- Background glow -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-96 h-96 bg-white/5 rounded-full blur-3xl"></div>

  <div class="container relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 items-start">
      <!-- Left Column - Info -->
      <div>
        <span class="font-mono text-xs uppercase tracking-widest text-gray-400 mb-4 block">
          Contato
        </span>
        <h2 class="text-4xl md:text-5xl font-mono font-bold mb-6">
          Vamos <span class="text-gray-400">conversar?</span>
        </h2>
        <p class="text-gray-400 text-lg mb-12 leading-relaxed">
          Entre em contato para uma demonstração gratuita e descubra como
          nossas soluções podem otimizar sua empresa.
        </p>

        <!-- Contact Info -->
        <div class="space-y-6 mb-12">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 border border-gray-700 flex items-center justify-center flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <div>
              <div class="font-mono text-sm uppercase tracking-wider text-gray-400 mb-1">Email</div>
              <a href="mailto:contato@vhogal.com" class="text-white hover:text-gray-300 transition-colors">
                contato@vhogal.com
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="w-12 h-12 border border-gray-700 flex items-center justify-center flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <div>
              <div class="font-mono text-sm uppercase tracking-wider text-gray-400 mb-1">Telefone</div>
              <a href="tel:+5533988344176" class="text-white hover:text-gray-300 transition-colors">
                +55 (33) 98834-4176
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="w-12 h-12 border border-gray-700 flex items-center justify-center flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <div>
              <div class="font-mono text-sm uppercase tracking-wider text-gray-400 mb-1">Localização</div>
              <span class="text-white">
                Manhuaçu, Minas Gerais
              </span>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div class="flex items-center gap-4">
          <a href="https://linkedin.com/company/vhogal" target="_blank" rel="noopener noreferrer" class="w-12 h-12 border border-gray-700 flex items-center justify-center hover:border-white hover:bg-white/10 transition-all" aria-label="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
          <a href="https://instagram.com/vhogal" target="_blank" rel="noopener noreferrer" class="w-12 h-12 border border-gray-700 flex items-center justify-center hover:border-white hover:bg-white/10 transition-all" aria-label="Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a href="https://github.com/vhogal" target="_blank" rel="noopener noreferrer" class="w-12 h-12 border border-gray-700 flex items-center justify-center hover:border-white hover:bg-white/10 transition-all" aria-label="GitHub">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Column - Form -->
      <div class="card p-8 md:p-12">
        <!-- Success Message -->
        <div id="form-success" class="hidden mb-6 p-4 border border-white bg-white/10">
          <p class="font-mono text-sm uppercase tracking-wider text-white">
            Mensagem enviada com sucesso! Entraremos em contato em breve.
          </p>
        </div>

        <!-- Error Message -->
        <div id="form-error" class="hidden mb-6 p-4 border border-red-500 bg-red-500/10">
          <p class="font-mono text-sm uppercase tracking-wider text-red-500">
            Erro ao enviar mensagem. Por favor, tente novamente.
          </p>
        </div>

        <form id="contact-form" class="space-y-6">
          <div class="grid sm:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block font-mono text-sm uppercase tracking-wider text-gray-400 mb-2">
                Nome *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full bg-transparent border border-gray-700 px-4 py-3 text-white placeholder-gray-600 focus:border-white focus:outline-none transition-colors"
                placeholder="Seu nome"
              />
              <p class="text-red-500 text-xs mt-1 hidden" data-error="name">Por favor, preencha seu nome.</p>
            </div>
            <div>
              <label for="company" class="block font-mono text-sm uppercase tracking-wider text-gray-400 mb-2">
                Empresa
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full bg-transparent border border-gray-700 px-4 py-3 text-white placeholder-gray-600 focus:border-white focus:outline-none transition-colors"
                placeholder="Nome da empresa"
              />
            </div>
          </div>

          <div>
            <label for="email" class="block font-mono text-sm uppercase tracking-wider text-gray-400 mb-2">
              Email *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full bg-transparent border border-gray-700 px-4 py-3 text-white placeholder-gray-600 focus:border-white focus:outline-none transition-colors"
              placeholder="seu@email.com"
            />
            <p class="text-red-500 text-xs mt-1 hidden" data-error="email">Por favor, insira um email válido.</p>
          </div>

          <div>
            <label for="product" class="block font-mono text-sm uppercase tracking-wider text-gray-400 mb-2">
              Produto de interesse
            </label>
            <select
              id="product"
              name="product"
              class="w-full bg-transparent border border-gray-700 px-4 py-3 text-white focus:border-white focus:outline-none transition-colors appearance-none cursor-pointer"
            >
              <option value="" class="bg-gray-900">Selecione um produto</option>
              <option value="pew3" class="bg-gray-900">PEW3 - Ponto Eletrônico</option>
              <option value="doc3" class="bg-gray-900">DOC3 - Documentos Digitais</option>
              <option value="ambos" class="bg-gray-900">Ambos os produtos</option>
            </select>
          </div>

          <div>
            <label for="message" class="block font-mono text-sm uppercase tracking-wider text-gray-400 mb-2">
              Mensagem
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full bg-transparent border border-gray-700 px-4 py-3 text-white placeholder-gray-600 focus:border-white focus:outline-none transition-colors resize-none"
              placeholder="Como podemos ajudar?"
            ></textarea>
          </div>

          <button type="submit" id="submit-btn" class="btn-primary w-full justify-center">
            <span id="submit-text">Enviar mensagem</span>
            <span id="submit-loader" class="hidden">Enviando...</span>
            <svg id="submit-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="22" y1="2" x2="11" y2="13"></line>
              <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
            </svg>
            <svg id="spinner" class="hidden animate-spin" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10" opacity="0.25"></circle>
              <path d="M12 2a10 10 0 0 1 10 10" opacity="0.75"></path>
            </svg>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const submitText = document.getElementById('submit-text');
  const submitLoader = document.getElementById('submit-loader');
  const submitIcon = document.getElementById('submit-icon');
  const spinner = document.getElementById('spinner');
  const successMsg = document.getElementById('form-success');
  const errorMsg = document.getElementById('form-error');

  // Validation function
  const validateEmail = (email: string): boolean => {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email);
  };

  const showError = (field: string, show: boolean) => {
    const errorEl = document.querySelector(`[data-error="${field}"]`);
    const inputEl = document.getElementById(field) as HTMLInputElement;

    if (errorEl && inputEl) {
      if (show) {
        errorEl.classList.remove('hidden');
        inputEl.classList.add('border-red-500');
        inputEl.classList.remove('border-gray-700');
      } else {
        errorEl.classList.add('hidden');
        inputEl.classList.remove('border-red-500');
        inputEl.classList.add('border-gray-700');
      }
    }
  };

  // Form validation
  const validateForm = (): boolean => {
    let isValid = true;
    const nameInput = document.getElementById('name') as HTMLInputElement;
    const emailInput = document.getElementById('email') as HTMLInputElement;

    // Validate name
    if (!nameInput.value.trim()) {
      showError('name', true);
      isValid = false;
    } else {
      showError('name', false);
    }

    // Validate email
    if (!emailInput.value.trim() || !validateEmail(emailInput.value)) {
      showError('email', true);
      isValid = false;
    } else {
      showError('email', false);
    }

    return isValid;
  };

  // Real-time validation
  ['name', 'email'].forEach(field => {
    const input = document.getElementById(field) as HTMLInputElement;
    if (input) {
      input.addEventListener('blur', () => {
        if (field === 'email') {
          showError(field, !validateEmail(input.value));
        } else {
          showError(field, !input.value.trim());
        }
      });
    }
  });

  // Form submission
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Validate form
      if (!validateForm()) {
        return;
      }

      // Show loading state
      submitBtn.disabled = true;
      submitText?.classList.add('hidden');
      submitIcon?.classList.add('hidden');
      submitLoader?.classList.remove('hidden');
      spinner?.classList.remove('hidden');
      successMsg?.classList.add('hidden');
      errorMsg?.classList.add('hidden');

      // Submit to Formspree
      try {
        const formData = new FormData(form);

        const response = await fetch('https://formspree.io/f/mojabqqq', {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });

        if (!response.ok) {
          throw new Error('Form submission failed');
        }

        // Show success message
        successMsg?.classList.remove('hidden');
        form.reset();

        // Scroll to success message
        successMsg?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });

      } catch (error) {
        // Show error message
        errorMsg?.classList.remove('hidden');
        console.error('Form submission error:', error);
      } finally {
        // Reset button state
        submitBtn.disabled = false;
        submitText?.classList.remove('hidden');
        submitIcon?.classList.remove('hidden');
        submitLoader?.classList.add('hidden');
        spinner?.classList.add('hidden');
      }
    });
  }
</script>
