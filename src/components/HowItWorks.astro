---
const steps = [
  {
    number: '01',
    title: 'Contato Inicial',
    description: 'Entre em contato conosco para uma demonstração gratuita e entender suas necessidades.'
  },
  {
    number: '02',
    title: 'Configuração',
    description: 'Nossa equipe configura o sistema de acordo com as regras e estrutura da sua empresa.'
  },
  {
    number: '03',
    title: 'Treinamento',
    description: 'Capacitamos sua equipe para utilizar todas as funcionalidades do sistema.'
  },
  {
    number: '04',
    title: 'Operação',
    description: 'Sistema em produção com suporte contínuo e atualizações automáticas.'
  }
];
---

<section id="como-funciona" class="py-32 relative overflow-hidden">
  <!-- Background accent -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-96 h-96 bg-white/5 rounded-full blur-3xl"></div>

  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <span class="font-mono text-xs uppercase tracking-widest text-gray-400 mb-4 block">
        Processo
      </span>
      <h2 class="text-4xl md:text-6xl font-mono font-bold mb-6">
        Como <span class="text-gray-400">funciona</span>
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto text-lg">
        Do primeiro contato à operação em poucos passos.
      </p>
    </div>

    <!-- Steps -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12 relative">
      {steps.map((step, index) => (
        <div class="relative group">
          <!-- Connector arrow -->
          {index < steps.length - 1 && (
            <div class="hidden lg:flex items-center absolute top-8 left-full -translate-y-1/2 w-[42px]">
              <!-- Line -->
              <div class="flex-1 h-[2px] bg-gradient-to-r from-gray-600 to-gray-400 relative overflow-hidden">
                <!-- Animated pulse overlay -->
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/40 to-transparent animate-shimmer"></div>
              </div>
              <!-- Arrow head SVG -->
              <svg
                class="w-5 h-5 text-gray-400 -ml-1 flex-shrink-0"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </div>
          )}

          <!-- Step content -->
          <div class="relative z-10">
            <!-- Number -->
            <div class="w-16 h-16 border-2 border-gray-700 flex items-center justify-center mb-6 group-hover:border-white group-hover:bg-white group-hover:text-black transition-all duration-300">
              <span class="font-mono text-xl font-bold">{step.number}</span>
            </div>

            <!-- Content -->
            <h3 class="text-xl font-mono font-bold mb-3">
              {step.title}
            </h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              {step.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-20">
      <a href="#contato" class="btn-primary inline-flex">
        Começar agora
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
